# CREATE .env.local file and copy this value and fill it
DATABASE_URL=YOUR_NEON_DB_URL

BETTER_AUTH_SECRET=YOUR_BETTER_AUTH_SECRET
BETTER_AUTH_URL=http://localhost:3000 # Base URL of your app

GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# Image generation (Fal.ai)
FAL_API_KEY=YOUR_FAL_API_KEY

# TTS Narration (Gemini)
GEMINI_API_KEY=YOUR_GEMINI_API_KEY

# File uploads (Uploadthing)
UPLOADTHING_TOKEN=YOUR_UPLOADTHING_TOKEN

# ADK Backend Configuration
# Base URL for ADK API (HTTP) - used for lesson generation, SSE streaming
# For local development: http://localhost:8000
# For production: https://fablelab-adk.onrender.com
ADK_BASE_URL=http://localhost:8000

# WebSocket URL for Playground Agent (bidi/real-time voice)
# Used server-side for bridging WebSocket connections
# For local development: ws://localhost:8000/playground/bidi
# For production: wss://fablelab-adk.onrender.com/playground/bidi
ADK_PLAYGROUND_WS_URL=ws://localhost:8000/playground/bidi

# Public WebSocket URL (for client-side browser connections)
# For local development: ws://localhost:8000/playground/bidi
# For production: wss://fablelab-adk.onrender.com/playground/bidi
NEXT_PUBLIC_ADK_WS_URL=ws://localhost:8000/playground/bidi